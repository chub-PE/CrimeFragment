<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listCrimeSolvedCheckBox"
        android:gravity="center"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:enabled="false"
        />

    <TextView
        android:id="@+id/listCrimeTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crime title"
        android:layout_toLeftOf="@id/listCrimeSolvedCheckBox"
        android:textStyle="bold"
        android:paddingLeft="@dimen/list_item_crime_padding"
        android:paddingRight="@dimen/list_item_crime_padding"
        />

    <TextView
        android:id="@+id/listCrimeDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CrimeDate"
        android:layout_below="@id/listCrimeTitleTextView"
        android:layout_toLeftOf="@id/listCrimeSolvedCheckBox"

        />
</RelativeLayout>